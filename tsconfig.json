{
    "compilerOptions": {
      "target": "ES6",
      "module": "esnext",
      "lib": [
        "ES2017",
        "ES7",
        "ES6",
        "DOM"
      ],
      "declaration": true,
      "importHelpers": true,
      "noUnusedParameters": false,
      "noUnusedLocals": false,
      "rootDir": "src",
      "outDir": "lib",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "downlevelIteration": true,
      "skipLibCheck": true,
      "removeComments": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "watch": true,
      "jsx": "react-jsx",
      "strict": false,
      "forceConsistentCasingInFileNames": false,
      "isolatedModules": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "noFallthroughCasesInSwitch": true,
      "noEmit": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.test.js",
      "**/*.repl.js",
      "**/*.test.ts",
      "**/*.repl.ts",
      "src/aws-exports.js",
      "node_modules",
      "src/misc"
    ]
  }
  